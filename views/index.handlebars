
<h1>Hamburger Hut</h1>

<main>

    {{#each burgers}} {{#unless this.devoured}}
    <div>
        <form action="/burgers/{{this.id}}" method="PUT"  id={{this.id}} >{{this.burger}}
            <button type="submit" method="POST"> Devour! </button>
        </form>
    </div>
    {{/unless}} {{/each}}

    <h2>Eaten: </h2>

    {{#each burgers}} {{#if this.devoured}}

        <div>
            {{this.burger}}
        </div>

    {{/if}} {{/each}}

    </div>
    </div>
</main>

<h2>Make A Custom Burger</h2>

<div class="row">
    <div class="col s12">
        <form action="/burgers" method="POST">
            <input type="text" id="newBurger" name="newBurger">
            <button type="submit" class="addBurgerButton">Add The Burger</button>
        </form>
    </div>
</div>